# JML Engine Environment Configuration
# Copy this file to .env and configure your values

# Application Settings
MOCK_MODE=true
ENVIRONMENT=development
LOG_LEVEL=INFO

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Dashboard
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8501

# Data Storage
AUDIT_DIR=/app/audit
STATE_FILE=/app/data/state.json
EVIDENCE_DIR=/app/audit/evidence

# AWS Configuration (leave empty for mock mode)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=

# Azure Configuration
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=
AZURE_SUBSCRIPTION_ID=

# GitHub Configuration
GITHUB_TOKEN=
GITHUB_ORGANIZATION=
GITHUB_APP_ID=
GITHUB_PRIVATE_KEY=

# Google Workspace Configuration
GOOGLE_SERVICE_ACCOUNT_EMAIL=
GOOGLE_SERVICE_ACCOUNT_KEY_FILE=
GOOGLE_WORKSPACE_DOMAIN=
GOOGLE_ADMIN_EMAIL=

# Slack Configuration
SLACK_TOKEN=
SLACK_WORKSPACE_ID=
SLACK_TEAM_ID=

# Database (Optional - for advanced state management)
DATABASE_URL=sqlite:///./jml_engine.db
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-here
ENCRYPTION_KEY=your-encryption-key-here

# Monitoring & Observability
PROMETHEUS_ENABLED=false
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# External Integrations
WEBHOOK_SECRET=your-webhook-secret
API_RATE_LIMIT=100/minute

# Email Notifications (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
NOTIFICATION_EMAIL=admin@jml-engine.dev

# Compliance
COMPLIANCE_MODE=strict
AUDIT_RETENTION_DAYS=2555
EVIDENCE_ENCRYPTION=true
